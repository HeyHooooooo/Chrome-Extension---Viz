{
  "manifest_version": 3,
  "name": "Viz Tector",
  "version": "1.0",
  "description": "Distortion detection tool for images",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "https://n.news.naver.com/",
    "https://www.google.co.kr/",
    "https://www.naver.com"
  ],
  "background": {
    "service_worker": "background.js"
  }
}